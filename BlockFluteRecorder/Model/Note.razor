@if (Value is not null)
{
    <img class="@Class" src="@Value.Image" @onclick="@(() => OnClick.InvokeAsync(Value))" />
}

@code {
    [Parameter]
    public Note Value { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public EventCallback<Note> OnClick { get; set; }
}
